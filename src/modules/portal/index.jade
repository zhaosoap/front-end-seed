.portal
  .part1
    .content
      p This system can predict the location of measurement report(MR)
      p Visualize and compare the results, Generate reports

  .wrapper
      .part2
        .content
          .left
            p Raw Data
          .right
            .sd-sides
              span.tag
              select(
              ng-model='cleanConf.rawFile'
              ng-options='name for name in rawFileList'
              )
                option(value="") -- choose raw file --
      .part2
        .clean
          .content(
            style='height:160px'
          )
            .left
              p Clean
              .row(ng-show='cleanConf.rawFile')
                .btn.btn-block.btn-lg.btn-success(ng-hide='cleanScreen' ng-click='submitCleanTask()')
                  | submit
            .middle
              span.fui-triangle-up(
              style='float:left'
              ng-show='cleanScreen'
              ng-click='cleanScreen=0'
              )
            .right
              .check-element.animate-hide(ng-hide='cleanScreen')
                label.checkbox
                  input(type='checkbox', ng-model='cleanConf.delNullLacOrCellId')
                  span Delete null LAC or Cell-id

                label.checkbox
                  input(type='checkbox', ng-model='cleanConf.delNullLngOrLat')
                  span Delete null Longitude or Latitude

                label.checkbox
                  input(type='checkbox', ng-model='cleanConf.isMR')
                  span Message Type is 'Measurement Report'

                label.checkbox
                  input(type='checkbox', ng-model='cleanConf.setRLGT')
                  span Serving BS RxLev greater than
                    select(
                    ng-disabled='!cleanConf.setRLGT'
                    ng-model='cleanConf.RxLevGreaterThan'
                    ng-options='name for name in [-50,-60,-70,-80,-90,-100,-110,-1000]'
                    )
              .check-element.animate-hide(ng-show='cleanScreen')

                .check-element.animate-hide(ng-show='cleanLoading')
                  img.loading(src='./styles/image/loading.gif')
                .check-element.animate-hide(ng-hide='cleanLoading')
                  p Raw File :
                    span {{cleanResult.input.rawFile}}
                    |({{cleanResult.input.rows}},{{cleanResult.input.columns}})
                  p Deleted :
                    span {{cleanResult.input.rows - cleanResult.output.rows}}
                    |rows
                  p Saved as :
                    span {{cleanResult.output.cleanFile}}
                    |({{cleanResult.output.rows}},{{cleanResult.output.columns}})

      .part2
        .content
          .left
            p Split Train & Test
            .row
              .btn.btn-block.btn-lg.btn-success(ng-click='submitTask()',ng-hide='load1')
                | submit
          .right
            label.radio
              input(type='radio', value='0', ng-model='split_way')
              span Ordered
            label.radio
              input(type='radio', value='1', ng-model='split_way')
              span Random
            label Ratio
              select.form-control.select.select-primary(data-toggle='select')
                option 50%
                option 60%
                option 70%
                option 80%
                option 90%
      .part2
        .content
          .left
            p Algorithm
          .right
            label.radio
              input(type='radio', value='DT', ng-model='algorithm')
              span Decision Tree(DT)
            label.radio
              input(type='radio', value='RF_roc', ng-model='algorithm')
              span 2 Layer Random Forest(RF)
            label.radio
              input(type='radio', value='MLP', ng-model='algorithm')
              span Multilayer Perceptron (MLP)
            label.radio
              input(type='radio', value='RNN', ng-model='algorithm')
              span Recurrent Neural Networks(RNN)
      .part2
        .content
          .left
            p {{algorithm}} Configuration
            .row
              .labelroc Train Set
              select(
              ng-model='trainSet'
              ng-options='name for name in trainFileList'
              )
                option(value="") -- choose train set --

            .row
              .labelroc Test Set
              select(
              ng-model='testSet'
              ng-options='name for name in testFileList'
              )
                option(value="") -- choose test set --

            .row
              .btn.btn-block.btn-lg.btn-success(ng-click='submitTask()',ng-hide='load1')
                | submit


          .right
            .slide-animate-container
              .slide-animate(ng-include='template.url')


      .part2
        .content
          .left
            p Results
          .right

      .part2
        .content
          .left
            p Analysis
          .right




